        <form
          method="post"
          action="upload"
          enctype="multipart/form-data"
          novalidate
          class="box"
        >
          <div class="box__input">
            <svg
              class="box__icon"
              xmlns="http://www.w3.org/2000/svg"
              width="50"
              height="43"
              viewBox="0 0 50 43"
