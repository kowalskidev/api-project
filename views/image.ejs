<img
  src="/img/uploads/<%= filename%>"
  alt="<%= filename%>"
  width="500px"
  height="500px"
/>
<button id="btn_similar_image">Get Similar Images</button>
<button id="btn_colors">Get Image Colors</button>
<script>
  $("#btn_similar_image").on("click", (e) => {
    e.preventDefault();
    $.ajax({
      method: "GET",
      url: "/analyzeImage/<%= filename%>",
      beforeSend: () => {
        $(".loader-wrapper").fadeIn("fast");
      },
      success: function (data) {
        $(".loader-wrapper").fadeOut("slow");
        if (!data) {
          $("#content").html("Opps! Something went wrong :/");
        }
      },
    }).done((res) => {
      $("#content").html(res);
    });
  });

  $("#btn_colors").on("click", (e) => {
    e.preventDefault();
    $.ajax({
      method: "GET",
      url: "/analyzeColors/<%= filename%>",
      beforeSend: () => {
        $(".loader-wrapper").fadeIn("fast");
      },
      success: function (data) {
        $(".loader-wrapper").fadeOut("slow");
        if (!data) {
          $("#content").html("Opps! Something went wrong :/");
        }
      },
    }).done((res) => {
      $("#content").html(res);
    });
  });
</script>
